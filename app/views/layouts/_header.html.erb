<header>
  <div class="header_search_twitter_user">
    <%= form_tag("/twitter_user", :method => "get", :class => "twitter-user-search-form") do %>
      <label>Search Twitter User</label>
      <%= text_field_tag "twitter_handle", nil, {:placeholder => "Twitter Handle"} %>
      <%= submit_tag "Get Recent Tweets" %>
    <% end %>
  </div>

  <br>

  <div class="header_search_twitter_user">
    <%= form_tag("/twitter_user", :method => "get", :class => 'twitter-mutual-followers-form') do %>
      <label>Find Mutual Followers</label>
      <%= text_field_tag "twitter_handle_main", nil, {:placeholder => "First Twitter Handle"} %>
      <%= text_field_tag "twitter_handle_for_intersection", nil, {:placeholder => "Second Twitter Handle"} %>
      <%= submit_tag "Get Mutual Followers" %>
    <% end %>
  </div>
</header>
